{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for our React applications",
  "main": "src/index.js",
  "author": "Christoffer Niska <christofferniska@gmail.com>",
  "license": "MIT",
  "scripts": {
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "flow-typed": "flow-typed install",
    "lint": "eslint src webpack",
    "start": "webpack-dashboard -c \"#1179ad\" -- node -r babel-register node_modules/.bin/webpack-dev-server --config webpack/development.js",
    "compile": "node -r babel-register node_modules/.bin/webpack -p  --bail --config webpack/production.js",
    "precommit": "npm-run-all flow lint test",
    "test": "mocha --compilers js:babel-core/register --require src/test.js --recursive \"src/**/*spec.js\"",
    "test:coverage": "istanbul cover _mocha -- --compilers js:babel-core/register --require src/test.js --recursive \"src/**/*spec.js\"",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "lodash": "^4.17.2",
    "normalize.css": "^5.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-saga": "^0.13.0"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "chai-jsx": "^1.0.1",
    "clean-webpack-plugin": "^0.1.14",
    "css-loader": "^0.26.1",
    "dotenv": "^2.0.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.12.2",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "flow-bin": "^0.37.0",
    "flow-typed": "^2.0.0",
    "html-webpack-plugin": "^2.24.1",
    "husky": "^0.12.0",
    "imports-loader": "^0.7.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^3.2.0",
    "npm-run-all": "^3.1.2",
    "react-hot-loader": "next",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-clean-plugin": "^0.2.3",
    "webpack-dashboard": "^0.2.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-merge": "^1.1.2",
    "whatwg-fetch": "^2.0.1"
  }
}
